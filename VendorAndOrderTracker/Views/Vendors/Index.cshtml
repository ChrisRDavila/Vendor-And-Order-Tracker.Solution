@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;

<h2>List of Vendors</h2>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.VendorId'>@vendor.Name</a></h3>
}

<p><a href='/'>Back home</a></p>
