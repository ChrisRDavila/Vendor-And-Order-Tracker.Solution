@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;

<h3>vendor:</h3> 
<h2>@Model["vendor"].Name</h2>
<h2>@Model["vendor"].Describe</h2>
<h2>@Model["vendor"].Address</h2>

<p>here are the orders for this vendor:
<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].VendorId/orders/@order.OrderId'>@order.Title</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].VendorId/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>
